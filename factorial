import java.util.*;

class Fact {

    public static int fact(int k) {
        if (k == 0) {
            return 1;
        } else {
            return (k * fact(k - 1));
        }
    }

    public static void main(String[] args) {
        Scanner s = new Scanner(System.in);
        System.out.println("enter a number:");
        int a = s.nextInt();
        int b = fact(a);
        System.out.println("the factorial of given number is  " + b);
        s.close();
    }
}
